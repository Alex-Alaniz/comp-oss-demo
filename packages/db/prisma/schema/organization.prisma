model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logo      String?
  createdAt DateTime
  metadata  String?

  apiKeys            ApiKey[]
  artifacts          Artifact[]
  auditLog           AuditLog[]
  controls           Control[]
  evidence           Evidence[]
  frameworkInstances FrameworkInstance[]
  integrations       Integration[]
  invitations        Invitation[]
  members            Member[]
  policy             Policy[]
  risk               Risk[]
  vendors            Vendor[]
  tasks              Task[]

  @@index([slug])
}
